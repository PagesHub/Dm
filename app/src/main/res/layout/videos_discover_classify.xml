<?xml version="1.0" encoding="utf-8"?>
<com.yang.dm.widget.DmCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/layout_margin_2dp"
    android:layout_marginEnd="@dimen/layout_margin_2dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/color_f5"
    card_view:cardCornerRadius="@dimen/layout_margin_2dp"
    card_view:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yang.sdk.weight.CircleImageView
            android:id="@+id/imv_classify"
            android:src="@mipmap/common_empty_square"
            android:scaleType="fitXY"
            android:layout_width="@dimen/layout_margin_72dp"
            android:layout_height="@dimen/layout_margin_72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txv_classify_title"
            android:textSize="@dimen/text_size_18sp"
            app:layout_constraintStart_toEndOf="@id/imv_classify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txv_classify_description"
            style="@style/TextViewStyle"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txv_classify_description"
            android:textColor="@color/color_99"
            app:layout_constraintStart_toEndOf="@id/imv_classify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_classify_title"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/TextViewStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.yang.dm.widget.DmCardView>