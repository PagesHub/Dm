<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ds_clt"
    android:paddingStart="@dimen/layout_margin_10dp"
    android:paddingEnd="@dimen/layout_margin_10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txv_rec_title"
        android:textSize="@dimen/text_size_16sp"
        android:layout_height="@dimen/layout_margin_30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/TextViewStyle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txv_rec_tips"
        android:layout_height="@dimen/layout_margin_30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextViewStyle"/>

    <com.yang.dm.widget.DmRecyclerView
        android:id="@+id/recyclerView_rec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintTop_toBottomOf="@id/txv_rec_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>