<?xml version="1.0" encoding="utf-8"?>
<com.yang.dm.widget.DmCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/layout_margin_2dp"
    android:layout_marginEnd="@dimen/layout_margin_2dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/color_f5"
    card_view:cardCornerRadius="@dimen/layout_margin_2dp"
    card_view:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yang.sdk.weight.CircleImageView
            android:id="@+id/imv_top_pic"
            android:src="@mipmap/common_empty_rectangle"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txv_tag_name"
            android:layout_margin="@dimen/layout_margin_10dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imv_top_pic"
            style="@style/TextViewStyle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.yang.dm.widget.DmCardView>