<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    tools:context=".LauncherActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txv_number"
        android:layout_width="@dimen/layout_margin_20dp"
        android:layout_height="@dimen/layout_margin_20dp"
        android:layout_margin="@dimen/layout_margin_15dp"
        android:background="@drawable/shape_oval_step"
        android:gravity="center"
        android:text="@string/empty_string"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextViewStyle"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextViewStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>