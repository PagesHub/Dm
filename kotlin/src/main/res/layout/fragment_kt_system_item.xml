<?xml version="1.0" encoding="utf-8"?>
<com.yang.kotlin.weight.KtCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/sp_16"
        android:padding="@dimen/layout_margin_10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/systemParent"
            style="@style/TextViewStyle"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/systemChild"
            style="@style/TextViewStyle"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_5e"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/systemParent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.yang.kotlin.weight.KtCardView>