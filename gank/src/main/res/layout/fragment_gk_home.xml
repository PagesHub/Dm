<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/home_tab"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_margin_40dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:xTabBackgroundColor="@color/white"
        app:xTabDividerWidthWidthText="true"
        app:xTabIndicatorColor="@color/blue"
        app:xTabIndicatorHeight="@dimen/layout_margin_2dp"
        app:xTabMode="scrollable"
        app:xTabSelectedBackgroundColor="@color/white"
        app:xTabSelectedTextColor="@color/blue"
        app:xTabSelectedTextSize="@dimen/text_size_15sp"
        app:xTabTextColor="@color/color_bb"
        app:xTabTextSize="@dimen/text_size_15sp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/homePager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_tab" />
</androidx.constraintlayout.widget.ConstraintLayout>
