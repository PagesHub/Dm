<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ShapeButton">
        <attr name="buttonColor" format="reference"/>
        <attr name="radius" format="dimension"/>
        <attr name="stroke" format="dimension"/>
        <attr name="shapeStyle" format="dimension"/>
        <attr name="strokeColors" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RippleLayout">
        <attr name="color" format="color"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="circleRadius" format="dimension"/>
        <attr name="duration" format="integer"/>
        <attr name="rippleNum" format="integer"/>
        <attr name="scale" format="float"/>
        <attr name="showRipple" format="boolean"/>
    </declare-styleable>

    <!--CircleImageView自定义属性-->
    <declare-styleable name="CircleImageView">
        <attr format="boolean" name="is_circle"/>
        <attr format="boolean" name="is_cover_src"/>
        <attr format="dimension" name="corner_radius"/>
        <attr format="dimension" name="corner_top_left_radius"/>
        <attr format="dimension" name="corner_top_right_radius"/>
        <attr format="dimension" name="corner_bottom_left_radius"/>
        <attr format="dimension" name="corner_bottom_right_radius"/>
        <attr format="dimension" name="border_width"/>
        <attr format="color" name="border_color"/>
        <attr format="dimension" name="inner_border_width"/>
        <attr format="color" name="inner_border_color"/>
        <attr format="color" name="mask_color"/>
    </declare-styleable>
</resources>